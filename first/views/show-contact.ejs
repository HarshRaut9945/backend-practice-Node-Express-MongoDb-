<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>My Contact</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Varela+Round">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body class="bg-light">
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold text-uppercase" href="/">            
          <i class="fas fa-address-book me-2"></i> Contact App
        </a>
      </div>
    </nav>

    <!-- content -->
    <main class="py-5">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
              <div class="card-header bg-primary text-white">
                <strong><i class="fas fa-user me-2"></i> Contact Details</strong>
              </div>           
              <div class="card-body p-4">
                <div class="mb-3 row">
                  <label class="col-md-3 fw-bold">First Name</label>
                  <div class="col-md-9">
                    <p class="form-control-plaintext text-muted"><%= contact.first_name %></p>
                  </div>
                </div>

                <div class="mb-3 row">
                  <label class="col-md-3 fw-bold">Last Name</label>
                  <div class="col-md-9">
                    <p class="form-control-plaintext text-muted"><%= contact.last_name %></p>
                  </div>
                </div>

                <div class="mb-3 row">
                  <label class="col-md-3 fw-bold">Email</label>
                  <div class="col-md-9">
                    <p class="form-control-plaintext text-muted"><%= contact.email %></p>
                  </div>
                </div>

                <div class="mb-3 row">
                  <label class="col-md-3 fw-bold">Phone</label>
                  <div class="col-md-9">
                    <p class="form-control-plaintext text-muted"><%= contact.phone %></p>
                  </div>
                </div>

                <div class="mb-3 row">
                  <label class="col-md-3 fw-bold">Address</label>
                  <div class="col-md-9">
                    <p class="form-control-plaintext text-muted"><%= contact.address %></p>
                  </div>
                </div>
                <hr>
                <div class="d-flex justify-content-end gap-2">
                  <a href="/update-contact/<%= contact._id %>" class="btn btn-info">
                    <i class="fas fa-edit me-1"></i> Edit
                  </a>
                  <a href="/delete-contact/<%= contact._id %>" class="btn btn-outline-danger">
                    <i class="fas fa-trash me-1"></i> Delete
                  </a>
                  <a href="/" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Cancel
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
